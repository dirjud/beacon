<?xml version='1.0' encoding='utf-8'?>
<widget id="com.brooksee.beacon" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Beacon</name>
    <description>
        BLE GAP sniffer.
    </description>
    <author email="lane@brooksee.tech" href="http://brooksee.tech">
      Brooksee
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <engine name="android" spec="~7.0.0" />
    <plugin name="cordova-plugin-ble-central" spec="https://github.com/dirjud/cordova-plugin-ble-central.git" />
</widget>
